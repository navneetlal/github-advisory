{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node -r ts-node/register src/server.ts"
    },
    "watch": [
      "src/**/*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,js"
  }
  